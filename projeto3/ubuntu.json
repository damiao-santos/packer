{
    "builders": [
        {
        "type": "amazon-ebs",
        "ami_name": "ubuntu-nginx-1311",
        "source_ami": "ami-0e83be366243f524a",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "setup.sh"
        },
        {
            "type": "file",
            "source": "index.html",
            "destination": "/tmp/" 
        },
        {
            "type": "shell",
            "inline": ["sudo mv /tmp/index.html /var/www/html/"]
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "output.json"
        },
        {
            "type": "vagrant"
        }
    ]
}
